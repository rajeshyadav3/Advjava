package com.web;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.dao.EmployeeDAO;
import com.dto.Employee;

/**
 * Servlet implementation class DeleteEmployee
 */
@WebServlet("/DeleteEmployee")
public class DeleteEmployee extends HttpServlet {
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        // Get the empId parameter from the request
        int empId = Integer.parseInt(request.getParameter("empId"));

        // Create an instance of EmployeeDAO
        EmployeeDAO empDao = new EmployeeDAO();

        // Get the Employee object by empId
        Employee emp = empDao.getEmployeeById(empId);

        if (emp != null) {
            // Call a method to delete the employee record
            boolean success = empDao.deleteEmployee(emp);

            if (success) {
                out.println("<html><body>");
                out.println("<h3>Employee with ID " + empId + " deleted successfully</h3>");
                out.println("</body></html>");
            } else {
                out.println("<html><body>");
                out.println("<h3>Error deleting employee with ID " + empId + "</h3>");
                out.println("</body></html>");
            }
        } else {
            out.println("<html><body>");
            out.println("<h3>Employee with ID " + empId + " not found</h3>");
            out.println("</body></html>");
        }
	}

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
